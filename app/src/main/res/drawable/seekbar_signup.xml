<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- seekbar background !-->
    <item android:id="@android:id/background">
        <shape android:shape="line">
            <stroke android:width="4dp" android:color="@color/elevation_level01" />
        </shape>
    </item>

    <!-- seekbar progress !-->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="line">
                <stroke android:width="4dp" android:color="@color/elevation_alternative" />
            </shape>
        </clip>
    </item>
</layer-list>