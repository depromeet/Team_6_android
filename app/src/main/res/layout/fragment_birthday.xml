<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="vm"
            type="com.teumteum.teumteum.presentation.signup.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_tv_bday_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:textAppearance="@style/ta.headline.3"
            android:lineSpacingExtra="3sp"
            android:textColor="?attr/color_text_headline_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_tv_bday_subtitle"
            android:layout_marginTop="8dp"
            android:paddingBottom="32dp"
            android:textAppearance="@style/ta.body.1"
            android:letterSpacing="-0.03125"
            android:lineSpacingExtra="5sp"
            android:textColor="?attr/color_text_body_quaternary"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_bday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_bday_year"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:textAppearance="@style/ta.body.1"
                android:letterSpacing="-0.03125"
                android:background="@drawable/sel_birth_number"
                android:gravity="center"
                app:boxBackgroundMode="none"
                android:paddingStart="12dp"
                android:paddingEnd="20dp"
                app:hintEnabled="false"
                app:suffixText="@{vm.birthYear.length() != 0 ? @string/signup_tv_suffix_year : null}"
                app:suffixTextColor="@color/text_body_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bday_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@{vm.birthYear}"
                    android:inputType="number"
                    android:textAppearance="@style/ta.body.1"
                    android:letterSpacing="-0.03125"
                    android:padding="0dp"
                    android:maxLength="4"
                    android:paddingStart="0dp"
                    android:textColor="@color/text_body_primary"
                    android:textColorHint="@color/text_body_quinary"
                    android:hint="@string/signup_tv_bday_year"
                    android:paddingEnd="0dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_bday_month"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:textAppearance="@style/ta.body.1"
                android:letterSpacing="-0.03125"
                android:background="@drawable/sel_birth_number"
                android:gravity="center"
                app:boxBackgroundMode="none"
                android:paddingStart="12dp"
                android:paddingEnd="20dp"
                app:hintEnabled="false"
                app:suffixText="@{vm.birthMonth.length() != 0 ? @string/signup_tv_suffix_month : null}"
                app:suffixTextColor="@color/text_body_primary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/til_bday_year"
                app:layout_constraintTop_toTopOf="@id/til_bday_year"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bday_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@{vm.birthMonth}"
                    android:inputType="number"
                    android:textAppearance="@style/ta.body.1"
                    android:letterSpacing="-0.03125"
                    android:padding="0dp"
                    android:maxLength="2"
                    android:paddingStart="0dp"
                    android:textColor="@color/text_body_primary"
                    android:textColorHint="@color/text_body_quinary"
                    android:hint="@string/signup_tv_bday_month"
                    android:paddingEnd="0dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_bday_date"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:textAppearance="@style/ta.body.1"
                android:letterSpacing="-0.03125"
                android:background="@drawable/sel_birth_number"
                android:gravity="center"
                app:boxBackgroundMode="none"
                android:paddingStart="12dp"
                android:paddingEnd="20dp"
                app:hintEnabled="false"
                app:suffixText="@{vm.birthDate.length() != 0 ? @string/signup_tv_suffix_date : null}"
                app:suffixTextColor="@color/text_body_primary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/til_bday_month"
                app:layout_constraintTop_toTopOf="@id/til_bday_year"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bday_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@{vm.birthDate}"
                    android:inputType="number"
                    android:textAppearance="@style/ta.body.1"
                    android:letterSpacing="-0.03125"
                    android:padding="0dp"
                    android:maxLength="2"
                    android:paddingStart="0dp"
                    android:textColor="@color/text_body_primary"
                    android:textColorHint="@color/text_body_quinary"
                    android:hint="@string/signup_tv_bday_date"
                    android:paddingEnd="0dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_tv_bday_invalid"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/ta.caption.2"
            android:textColor="?attr/color_text_caption_primary_error"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/ll_bday"
            app:layout_constraintStart_toStartOf="@id/ll_bday"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>