<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect12_top_elevation_level01"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="35dp"
                android:layout_height="4dp"
                android:src="@drawable/shape_rect50_elevation_level02"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBTI"
            android:paddingVertical="12dp"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/ta.headline.5"
            android:lineSpacingExtra="3sp"
            android:textColor="?attr/color_text_headline_primary"
            app:layout_constraintTop_toBottomOf="@id/ll_down"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:id="@+id/ll_mbti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_e"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="E"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_i"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="I"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_n"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="N"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_s"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="S"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_f"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="F"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_t"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="T"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_p"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="P"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_j"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sel_button_mbti"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:enabled="true"
                    android:text="J"
                    android:gravity="center"
                    android:textAppearance="@style/ta.headline.6"
                    android:textColor="@color/color_text_button_mbti"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sel_button_cta"
            app:layout_constraintTop_toBottomOf="@id/ll_mbti"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:enabled="false"
            android:text="선택 완료"
            android:textAppearance="@style/ta.headline.6"
            android:textColor="@color/color_text_button_primary_selector"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>