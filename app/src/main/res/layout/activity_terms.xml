<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.TeumTeum"
        android:background="@color/background"
        android:paddingTop="48dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_tv_terms_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:textAppearance="@style/ta.headline.3"
            android:lineSpacingExtra="3sp"
            android:textColor="?attr/color_text_headline_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_tv_terms_subtitle"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/ta.body.1"
            android:letterSpacing="-0.03125"
            android:lineSpacingExtra="5sp"
            android:textColor="?attr/color_text_body_quaternary"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_all"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            >
            <ImageView
                android:id="@+id/btn_terms_all"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sel_button_terms_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/signup_tv_terms_agree_all"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_body_secondary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_all"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/ll_terms_all"
            >
            <ImageView
                android:id="@+id/btn_terms_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_bold"
                app:tint="@color/selector_button_terms_single"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_mandatory_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_tv_terms_mandatory"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_button_secondary_default"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_tv_terms_agree_1"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_body_secondary"
                app:layout_constraintStart_toEndOf="@id/tv_terms_mandatory_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/btn_terms_detail_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_l"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="?attr/color_icon_level03" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/ll_terms_1"
            >
            <ImageView
                android:id="@+id/btn_terms_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_bold"
                app:tint="@color/selector_button_terms_single"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_mandatory_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_tv_terms_mandatory"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_button_secondary_default"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_tv_terms_agree_2"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_body_secondary"
                app:layout_constraintStart_toEndOf="@id/tv_terms_mandatory_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/btn_terms_detail_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_l"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="?attr/color_icon_level03" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/ll_terms_2"
            >
            <ImageView
                android:id="@+id/btn_terms_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_bold"
                app:tint="@color/selector_button_terms_single"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_mandatory_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_tv_terms_mandatory"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_button_secondary_default"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_tv_terms_agree_3"
                android:textAppearance="@style/ta.headline.6"
                android:lineSpacingExtra="3sp"
                android:textColor="?attr/color_text_body_secondary"
                app:layout_constraintStart_toEndOf="@id/tv_terms_mandatory_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/btn_terms_detail_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_l"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="?attr/color_icon_level03" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/color_divider_level02"
            app:layout_constraintBottom_toTopOf="@id/btn_start"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sel_button_cta"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:enabled="false"
            android:text="@string/signup_btn_start"
            android:textAppearance="@style/ta.headline.6"
            android:textColor="@color/color_text_button_primary_selector"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>